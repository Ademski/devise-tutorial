<div class="container">
	<div class="omb_login">
		<h3 class="omb_authTitle">Login or <%= link_to 'Sign up', new_user_registration_path %></h3>
	<div class="row omb_row-sm-offset-3 omb_socialButtons">
		<div class="col-xs-12 col-sm-6">
			<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "btn btn-lg btn-block omb_btn-facebook" %>
		</div>
	</div>

	<div class="row omb_row-sm-offset-3 omb_loginOr">
		<div class="col-xs-12 col-sm-6">
			<hr class="omb_hrOr">
			<span class="omb_spanOr">or</span>
		</div>
	</div>

	<div class="row omb_row-sm-offset-3">
		<div class="col-xs-12 col-sm-6">	
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}, :class => 'omb_loginForm') do |f| %>
				<%= devise_error_messages! %>	
			
				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-user"></i></span>
					<%= f.email_field :email, :autofocus => true, class: 'form-control', :placeholder => 'email address' %>
				</div>
			  <span class="help-block"></span>
				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-lock"></i></span>
					<%= f.password_field :password, class: 'form-control', :placeholder => 'password' %>
				</div>
				<span class="help-block"></span>
				<button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
					<div class="col-xs-12 col-sm-6">
			      <% if devise_mapping.rememberable? -%>
		          <label class="checkbox">
		            <%= f.check_box :remember_me %> Remember me
		          </label>
			      <% end -%>
					</div>
					<div class="col-xs-12 col-sm-6">
						<p class="omb_forgotPwd">
				      <%- if devise_mapping.recoverable? %>
				        <%= link_to "Forgot password?", new_password_path(resource_name) %>
				      <% end -%>
						</p>
					</div>
			<% end %>
    </div>
	</div>
</div>
